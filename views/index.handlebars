<div class="container text-center">
  <div class="jumbotron">
  <h1 class="display-4">Bob's Burgers</h1>
  </div>
  <div class="row">
    <div class="col-md">
      <h2>Burgers that are available!</h2>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            <button type="button" class="btn btn-warning btn-xs" data-id="{{this.id}}">DEVOUR</button>
          {{/unless}}
        {{/each}}
    </div>
    <div class="col-md">
      <h2>Burgers that are devoured!</h2>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
    </div>
  </div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit" class="btn btn-success">Add Burger</button>
</form>
</div>